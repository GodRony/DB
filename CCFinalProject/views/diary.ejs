<%- include('partials/header.ejs'); -%>

  <div class="box" id="heading">
    <h1>
      Diaries
    </h1>
  </div>

  <div class="box">
    <form action="/diary/add" method="post">
      <input type="text" name="diaryTitle" placeholder="Diary Title" autocomplete="off" required />
      <textarea name="diaryContent" placeholder="Write your diary here..." required></textarea>
      <button class="add" type="submit">Add Diary</button>
    </form>

    <div>
      <% for (let diary of diaries) { %>
        <div class="diary-entry">
          <h3><%= diary.title %></h3>
          <p><%= diary.content %></p>
        </div>
      <% } %>
    </div>
  </div>

<%- include('partials/footer.ejs'); -%>
